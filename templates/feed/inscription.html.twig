{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }} <!-- Cela inclut les styles définis dans base.html.twig -->
    <style>
        /* Styles spécifiques à la page d'inscription */
        @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Roboto:wght@300;400;700&display=swap');

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: black; !important
            margin: 0;
            font-family: 'Roboto', sans-serif;
        }

        .container {
            text-align: center;
            color: white;
            width: 100%;
        }

        .logo {
            font-family: 'Bebas Neue', cursive;
            font-size: 48px;
            letter-spacing: 2px;
        }

        .logo span:first-child {
            color: white;
        }

        .logo span:last-child {
            color: #c65a2f;
        }

        h2 {
            font-family: 'Roboto', sans-serif;
            font-weight: 400;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 15px;
            align-items: center;
        }

        input {
            padding: 12px;
            border-radius: 5px;
            border: none;
            width: 320px;
            font-size: 16px;
            font-family: 'Roboto', sans-serif;
        }

        button {
            padding: 12px;
            background-color: white;
            border: none;
            margin-top: 20px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            font-size: 16px;
            font-family: 'Roboto', sans-serif;
            width: 150px;
            transition: 0.3s;
        }

        button:hover {
            color: #c65a2f;
            color: #c65a2f;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="logo">
            <span>ONLY</span><span>GRAILLE</span>
        </h1>

        <h2>Inscription</h2>

        {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.email) }}
            {{ form_row(form.password) }}
        {{ form_end(form) }}

        {% for label, messages in app.flashes %}
            <div class="flash-{{ label }}">
                {{ messages|join(', ') }}
            </div>
        {% endfor %}
    </div>
{% endblock %}
